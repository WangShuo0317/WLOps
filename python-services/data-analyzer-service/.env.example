# 服务配置
HOST=0.0.0.0
PORT=8001

# LLM 配置
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Embedding 配置
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# 存储配置
OUTPUT_DIR=./outputs
SAVE_DATASETS=true
SAVE_REPORTS=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery 配置（默认使用 Redis）
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 分片配置
BATCH_SIZE=50
MAX_WORKERS=4

# 任务配置
TASK_TIMEOUT=3600
TASK_RETRY_LIMIT=3
